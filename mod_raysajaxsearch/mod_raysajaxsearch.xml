<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="6.0" client="site" method="upgrade">
    <name>Rays AJAX Search</name>
    <author>Ray Caron</author>
    <creationDate>January 2026</creationDate>
    <copyright>(C) 2026 Ray Caron. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <authorEmail>ray1caron@gmail.com</authorEmail>
    <authorUrl>https://github.com/ray1caron/Rays-AJAX-Search</authorUrl>
    <version>1.0.0</version>
    <description>
        <![CDATA[
        Advanced AJAX live search module with SP Page Builder support.
        Provides real-time search results as you type.
        ]]>
    </description>
    
    <files>
        <!-- Core files -->
        <filename module="mod_raysajaxsearch">mod_raysajaxsearch.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        
        <!-- Folders -->
        <folder>tmpl</folder>
        <folder>media</folder>
        
        <!-- Remove this line - you don't have a src folder -->
        <!-- <folder>src</folder> -->
        
        <folder>language</folder>
    </files>
    
    <languages folder="language">
        <language tag="en-GB">en-GB/mod_raysajaxsearch.ini</language>
        <language tag="en-GB">en-GB/mod_raysajaxsearch.sys.ini</language>
    </languages>
    
    <namespace>Rays\AjaxSearch</namespace>
    
    <!-- Remove the entire <media> section or simplify it -->
    <!-- Media section is optional for modules -->
    
    <config>
        <fields name="params">
            <fieldset name="basic" label="MOD_RAYS_AJAX_SEARCH_BASIC_SETTINGS">
                
                <field
                    name="search_types"
                    type="list"
                    label="MOD_RAYS_AJAX_SEARCH_SEARCH_TYPES_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_SEARCH_TYPES_DESC"
                    multiple="true"
                    filter="string"
                    default="article,sppagebuilder"
                >
                    <option value="article">MOD_RAYS_AJAX_SEARCH_TYPE_ARTICLES</option>
                    <option value="sppagebuilder">MOD_RAYS_AJAX_SEARCH_TYPE_SPPAGES</option>
                </field>
                
                <field
                    name="min_chars"
                    type="number"
                    label="MOD_RAYS_AJAX_SEARCH_MIN_CHARS_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_MIN_CHARS_DESC"
                    default="2"
                    min="1"
                    max="10"
                />
                
                <field
                    name="typing_delay"
                    type="number"
                    label="MOD_RAYS_AJAX_SEARCH_TYPING_DELAY_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_TYPING_DELAY_DESC"
                    default="300"
                    min="0"
                    max="2000"
                    step="50"
                />
                
                <field
                    name="results_limit"
                    type="number"
                    label="MOD_RAYS_AJAX_SEARCH_RESULTS_LIMIT_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_RESULTS_LIMIT_DESC"
                    default="10"
                    min="1"
                    max="50"
                />
                
            </fieldset>
            
            <fieldset name="display" label="MOD_RAYS_AJAX_SEARCH_DISPLAY_SETTINGS">
                
                <field
                    name="show_category"
                    type="radio"
                    label="MOD_RAYS_AJAX_SEARCH_SHOW_CATEGORY_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_SHOW_CATEGORY_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="show_date"
                    type="radio"
                    label="MOD_RAYS_AJAX_SEARCH_SHOW_DATE_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_SHOW_DATE_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="show_type"
                    type="radio"
                    label="MOD_RAYS_AJAX_SEARCH_SHOW_TYPE_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_SHOW_TYPE_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="show_images"
                    type="radio"
                    label="MOD_RAYS_AJAX_SEARCH_SHOW_IMAGES_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_SHOW_IMAGES_DESC"
                    default="0"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
            </fieldset>
            
            <fieldset name="advanced" label="MOD_RAYS_AJAX_SEARCH_ADVANCED_SETTINGS">
                
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="MOD_RAYS_AJAX_SEARCH_MODULECLASS_SFX_LABEL"
                    description="MOD_RAYS_AJAX_SEARCH_MODULECLASS_SFX_DESC"
                    default=""
                />
                
            </fieldset>
            
        </fields>
    </config>
</extension>
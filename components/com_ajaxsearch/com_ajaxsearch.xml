<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>COM_AJAXSEARCH</name>
    <author>Ray Caron</author>
    <creationDate>January 2026</creationDate>
    <copyright>Copyright (C) 2026 Ray Caron. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <authorEmail>ray@example.com</authorEmail>
    <authorUrl>https://github.com/ray1caron/Rays-AJAX-Search</authorUrl>
    <version>1.0.0</version>
    <description>COM_AJAXSEARCH_XML_DESCRIPTION</description>
    
    <!-- Site files -->
    <files folder="components/com_ajaxsearch">
        <folder>src</folder>
    </files>
    
    <!-- Administration files -->
    <administration>
        <menu>COM_AJAXSEARCH</menu>
        <files folder="administrator/components/com_ajaxsearch">
            <filename>com_ajaxsearch.xml</filename>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
    </administration>
    
    <!-- SQL installation -->
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    
    <!-- SQL update -->
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    
    <!-- SQL uninstallation -->
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    
    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="Rays AJAX Search Update">
            https://raw.githubusercontent.com/ray1caron/Rays-AJAX-Search/main/updates/com_ajaxsearch.xml
        </server>
    </updateservers>
</extension>
